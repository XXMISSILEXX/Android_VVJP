<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/playnhac_background"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".activities.PlayNhacActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/activityPlayNhac_toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/activityPlayNhac_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/activityPlayNhac_timeStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/activityPlayNhac_seekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8" />

        <TextView
            android:id="@+id/activityPlayNhac_timeEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/activityPlayNhac_btnSuffle"
            android:layout_width="30dp"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/iconsuffle" />

        <ImageButton
            android:id="@+id/activityPlayNhac_btnPrevious"
            android:layout_width="40dp"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/iconpreview" />

        <ImageButton
            android:id="@+id/activityPlayNhac_btnPlay"
            android:layout_width="40dp"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/iconplay" />

        <ImageButton
            android:id="@+id/activityPlayNhac_btnNext"
            android:layout_width="40dp"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/iconnext" />

        <ImageButton
            android:id="@+id/activityPlayNhac_btnRepeat"
            android:layout_width="30dp"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/iconrepeat" />
    </LinearLayout>

</LinearLayout>